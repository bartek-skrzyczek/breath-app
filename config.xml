<?xml version='1.0' encoding='utf-8'?>
<widget id="com.hacksilesia.breathwork" version="0.0.1" xmlns="http://www.w3.org/ns/widgets"
        xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>BreathWork</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>

    <content src="index.html"/>

    <plugin name="cordova-plugin-splashscreen" version="1"/>

    <access origin="*"/>
    <allow-intent href="http://*/*"/>
    <allow-intent href="https://*/*"/>
    <allow-intent href="tel:*"/>
    <allow-intent href="sms:*"/>
    <allow-intent href="mailto:*"/>
    <allow-intent href="geo:*"/>

    <platform name="android">
        <allow-intent href="market:*"/>
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="SplashScreen" value="screen"/>
        <preference name="SplashScreenDelay" value="5000"/>
        <preference name="SplashScreenBackgroundColor" value="#17a6ef"/>
        <preference name="ShowSplashScreen" value="true"/>
        <preference name="orientation" value="portrait" />

        <splash src="app/images/splash.png" density="land-hdpi"/>
        <splash src="app/images/splash.png" density="land-ldpi"/>
        <splash src="app/images/splash.png" density="land-mdpi"/>
        <splash src="app/images/splash.png" density="land-xhdpi"/>
        <splash src="app/images/splash.png" density="port-hdpi"/>
        <splash src="app/images/splash.png" density="port-ldpi"/>
        <splash src="app/images/splash.png" density="port-mdpi"/>
        <splash src="app/images/splash.png" density="port-xhdpi"/>
    </platform>

</widget>
